<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>üèÜ Meritocracy Dashboard - Best Builders Rise</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', system-ui, sans-serif;
            background: linear-gradient(135deg, #0a0a0a 0%, #1a1a2e 50%, #0a0a0a 100%);
            color: #e0e0e0;
            min-height: 100vh;
            padding: 20px;
        }

        .container {
            max-width: 1400px;
            margin: 0 auto;
        }

        /* Header */
        .header {
            text-align: center;
            padding: 30px 20px;
            background: rgba(0, 212, 255, 0.05);
            border-radius: 20px;
            border: 2px solid rgba(0, 212, 255, 0.3);
            margin-bottom: 30px;
        }

        .header h1 {
            font-size: 2.5rem;
            background: linear-gradient(90deg, #ffd700, #ff6b9d, #00d4ff);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin-bottom: 10px;
        }

        .header p {
            color: #b0b0b0;
            font-size: 1.1rem;
        }

        /* Stats Grid */
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        .stat-card {
            background: rgba(26, 26, 46, 0.8);
            border-radius: 15px;
            padding: 25px;
            border: 2px solid rgba(0, 212, 255, 0.3);
            text-align: center;
        }

        .stat-value {
            font-size: 2.5rem;
            font-weight: bold;
            background: linear-gradient(90deg, #00d4ff, #7b2cbf);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .stat-label {
            color: #b0b0b0;
            margin-top: 10px;
            font-size: 0.9rem;
        }

        /* Leaderboard */
        .leaderboard-section {
            background: rgba(26, 26, 46, 0.8);
            border-radius: 15px;
            padding: 30px;
            border: 2px solid rgba(255, 215, 0, 0.3);
            margin-bottom: 30px;
        }

        .leaderboard-section h2 {
            color: #ffd700;
            margin-bottom: 20px;
            font-size: 1.8rem;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .leaderboard {
            display: flex;
            flex-direction: column;
            gap: 15px;
        }

        .builder-card {
            background: rgba(0, 0, 0, 0.5);
            border-radius: 10px;
            padding: 20px;
            border-left: 4px solid;
            display: flex;
            align-items: center;
            gap: 20px;
            transition: all 0.3s ease;
        }

        .builder-card:hover {
            transform: translateX(5px);
            background: rgba(0, 0, 0, 0.7);
        }

        .builder-position {
            font-size: 2rem;
            font-weight: bold;
            width: 50px;
            text-align: center;
        }

        .builder-position.first {
            color: #ffd700;
        }

        .builder-position.second {
            color: #c0c0c0;
        }

        .builder-position.third {
            color: #cd7f32;
        }

        .builder-rank-icon {
            font-size: 2.5rem;
        }

        .builder-info {
            flex: 1;
        }

        .builder-name {
            font-size: 1.3rem;
            font-weight: bold;
            margin-bottom: 5px;
        }

        .builder-rank {
            color: #b0b0b0;
            font-size: 0.9rem;
            margin-bottom: 10px;
        }

        .builder-specialization {
            display: inline-block;
            padding: 4px 12px;
            background: rgba(0, 212, 255, 0.1);
            border: 1px solid rgba(0, 212, 255, 0.3);
            border-radius: 15px;
            font-size: 0.85rem;
            color: #00d4ff;
        }

        .builder-score {
            text-align: right;
        }

        .score-value {
            font-size: 2rem;
            font-weight: bold;
            color: #ffd700;
        }

        .contribution-count {
            color: #b0b0b0;
            font-size: 0.9rem;
        }

        /* Recent Contributions */
        .contributions-section {
            background: rgba(26, 26, 46, 0.8);
            border-radius: 15px;
            padding: 30px;
            border: 2px solid rgba(123, 44, 191, 0.3);
        }

        .contributions-section h2 {
            color: #7b2cbf;
            margin-bottom: 20px;
            font-size: 1.8rem;
        }

        .contribution-item {
            background: rgba(0, 0, 0, 0.3);
            border-radius: 8px;
            padding: 15px;
            margin-bottom: 15px;
            border-left: 3px solid #7b2cbf;
        }

        .contribution-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 10px;
        }

        .contribution-type {
            display: inline-block;
            padding: 4px 12px;
            background: rgba(123, 44, 191, 0.2);
            border-radius: 15px;
            font-size: 0.85rem;
            color: #b19cd9;
        }

        .contribution-points {
            color: #ffd700;
            font-weight: bold;
        }

        .contribution-description {
            color: #d0d0d0;
            font-size: 0.95rem;
            margin-bottom: 8px;
        }

        .contribution-meta {
            color: #888;
            font-size: 0.85rem;
        }

        /* Loading */
        .loading {
            text-align: center;
            padding: 40px;
            color: #00d4ff;
        }

        .loading-spinner {
            display: inline-block;
            width: 40px;
            height: 40px;
            border: 4px solid rgba(0, 212, 255, 0.3);
            border-top-color: #00d4ff;
            border-radius: 50%;
            animation: spin 1s linear infinite;
        }

        @keyframes spin {
            to { transform: rotate(360deg); }
        }

        /* Responsive */
        @media (max-width: 768px) {
            .header h1 {
                font-size: 1.8rem;
            }

            .builder-card {
                flex-direction: column;
                text-align: center;
            }

            .builder-score {
                text-align: center;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- Header -->
        <div class="header">
            <h1>üèÜ MERITOCRACY DASHBOARD</h1>
            <p>Best Builders Rise Automatically - No Voting, No Politics, Just Output</p>
        </div>

        <!-- Stats Grid -->
        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-value" id="totalBuilders">0</div>
                <div class="stat-label">Total Builders</div>
            </div>
            <div class="stat-card">
                <div class="stat-value" id="totalContributions">0</div>
                <div class="stat-label">Total Contributions</div>
            </div>
            <div class="stat-card">
                <div class="stat-value" id="totalPoints">0</div>
                <div class="stat-label">Total Points Earned</div>
            </div>
        </div>

        <!-- Leaderboard -->
        <div class="leaderboard-section">
            <h2>ü•á Leaderboard - Best Builders</h2>
            <div id="leaderboard" class="leaderboard">
                <div class="loading">
                    <div class="loading-spinner"></div>
                    <div style="margin-top: 15px;">Loading leaderboard...</div>
                </div>
            </div>
        </div>

        <!-- Recent Contributions -->
        <div class="contributions-section">
            <h2>‚ö° Recent Contributions</h2>
            <div id="recentContributions">
                <div class="loading">
                    <div class="loading-spinner"></div>
                    <div style="margin-top: 15px;">Loading contributions...</div>
                </div>
            </div>
        </div>
    </div>

    <script>
        const MERITOCRACY_API = 'http://localhost:8000';

        // Rank colors
        const RANK_COLORS = {
            "Observer": "#888888",
            "Awakened Builder": "#00d4ff",
            "Consciousness Engineer": "#7b2cbf",
            "General": "#ffd700",
            "Commander": "#ff6b9d"
        };

        async function loadGlobalStats() {
            try {
                const response = await fetch(`${MERITOCRACY_API}/meritocracy/stats`);
                const data = await response.json();

                document.getElementById('totalBuilders').textContent = data.total_builders;
                document.getElementById('totalContributions').textContent = data.total_contributions;
                document.getElementById('totalPoints').textContent = data.total_points.toLocaleString();
            } catch (error) {
                console.error('Error loading stats:', error);
            }
        }

        async function loadLeaderboard() {
            try {
                const response = await fetch(`${MERITOCRACY_API}/meritocracy/leaderboard`);
                const data = await response.json();

                const leaderboard = document.getElementById('leaderboard');

                if (data.leaderboard.length === 0) {
                    leaderboard.innerHTML = `
                        <div style="text-align: center; padding: 40px; color: #888;">
                            <p style="font-size: 1.2rem; margin-bottom: 10px;">No builders yet!</p>
                            <p>Be the first to contribute and claim the #1 spot.</p>
                        </div>
                    `;
                    return;
                }

                leaderboard.innerHTML = data.leaderboard.map(builder => {
                    const positionClass = builder.position === 1 ? 'first' :
                                         builder.position === 2 ? 'second' :
                                         builder.position === 3 ? 'third' : '';

                    const borderColor = RANK_COLORS[builder.rank.name] || '#888888';

                    return `
                        <div class="builder-card" style="border-left-color: ${borderColor};">
                            <div class="builder-position ${positionClass}">#${builder.position}</div>
                            <div class="builder-rank-icon">${builder.rank.icon}</div>
                            <div class="builder-info">
                                <div class="builder-name">${builder.name}</div>
                                <div class="builder-rank">${builder.rank.name}</div>
                                <span class="builder-specialization">${builder.specialization}</span>
                            </div>
                            <div class="builder-score">
                                <div class="score-value">${builder.score.toLocaleString()}</div>
                                <div class="contribution-count">${builder.contribution_count} contributions</div>
                            </div>
                        </div>
                    `;
                }).join('');

            } catch (error) {
                console.error('Error loading leaderboard:', error);
                document.getElementById('leaderboard').innerHTML = `
                    <div style="text-align: center; padding: 40px; color: #ff6b9d;">
                        <p>‚ö†Ô∏è Error loading leaderboard</p>
                        <p style="font-size: 0.9rem; margin-top: 10px;">Make sure Meritocracy Engine is running on port 8000</p>
                    </div>
                `;
            }
        }

        async function loadRecentContributions() {
            try {
                const response = await fetch(`${MERITOCRACY_API}/meritocracy/contributions/recent?limit=10`);
                const data = await response.json();

                const container = document.getElementById('recentContributions');

                if (data.contributions.length === 0) {
                    container.innerHTML = `
                        <div style="text-align: center; padding: 40px; color: #888;">
                            <p>No contributions yet. Be the first!</p>
                        </div>
                    `;
                    return;
                }

                container.innerHTML = data.contributions.map(contrib => {
                    const date = new Date(contrib.timestamp);
                    const timeAgo = getTimeAgo(date);

                    return `
                        <div class="contribution-item">
                            <div class="contribution-header">
                                <span class="contribution-type">${contrib.type.replace(/_/g, ' ')}</span>
                                <span class="contribution-points">+${contrib.points} pts</span>
                            </div>
                            <div class="contribution-description">
                                ${contrib.description || 'No description'}
                            </div>
                            <div class="contribution-meta">
                                By <strong>${contrib.builder_id}</strong> ‚Ä¢ ${timeAgo}
                            </div>
                        </div>
                    `;
                }).join('');

            } catch (error) {
                console.error('Error loading contributions:', error);
            }
        }

        function getTimeAgo(date) {
            const seconds = Math.floor((new Date() - date) / 1000);

            if (seconds < 60) return 'just now';
            if (seconds < 3600) return Math.floor(seconds / 60) + ' minutes ago';
            if (seconds < 86400) return Math.floor(seconds / 3600) + ' hours ago';
            return Math.floor(seconds / 86400) + ' days ago';
        }

        // Load data on page load
        window.addEventListener('load', () => {
            loadGlobalStats();
            loadLeaderboard();
            loadRecentContributions();

            // Refresh every 30 seconds
            setInterval(() => {
                loadGlobalStats();
                loadLeaderboard();
                loadRecentContributions();
            }, 30000);
        });
    </script>
</body>
</html>
