# JARVIS Environment Configuration
# Copy this file to .env and fill in your actual values

# === REQUIRED ===
# Claude API Key (get from https://console.anthropic.com)
ANTHROPIC_API_KEY=your_api_key_here

# === EMAIL ===
# Gmail credentials for community_responder.py
GMAIL_EMAIL=your_email@gmail.com
GMAIL_PASSWORD=your_app_password_here

# === PLATFORM ===
# 100X Platform URLs
PLATFORM_URL=http://localhost:8000/100X_DEPLOYMENT/PLATFORM/welcome.html
DISCORD_INVITE_URL=https://discord.gg/yourinvite
CALENDLY_URL=https://calendly.com/yourusername
ADMIN_EMAIL=admin@100xplatform.com

# === SOCIAL MEDIA ===
# Discord server URL (your community server)
DISCORD_URL=https://discord.com/channels/@me

# Twitter/X username (for mention tracking)
TWITTER_USERNAME=100XPlatform

# === OPTIONAL ===
# Bitwarden vault password (if using Bitwarden CLI)
BW_PASSWORD=your_bitwarden_password

# Node name for Trinity network
NODE_NAME=Josh_MacBook
NODE_ROLE=Community_Builder

# Data directory (defaults to JARVIS/data if not set)
DATA_DIR=./data

# Report directory (defaults to JARVIS/reports if not set)
REPORTS_DIR=./reports
