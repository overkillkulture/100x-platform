# ===========================
# 100X PLATFORM API GATEWAY
# ENVIRONMENT CONFIGURATION
# ===========================

# Copy this file to .env and fill in your actual values
# cp .env.example .env

# ===========================
# APPLICATION SETTINGS
# ===========================

# Environment: development, staging, production
ENVIRONMENT=development

# Debug mode (True for development, False for production)
DEBUG=True

# Server configuration
HOST=0.0.0.0
PORT=8000

# ===========================
# SECURITY SETTINGS
# ===========================

# JWT Configuration
# IMPORTANT: Change this to a secure random value in production!
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(64))"
JWT_SECRET_KEY=change-this-to-a-secure-random-value-in-production-make-it-very-long-and-random
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# ===========================
# REDIS SETTINGS
# ===========================

# Redis connection (for rate limiting and caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ===========================
# DATABASE SETTINGS
# ===========================

# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://user:password@localhost:5432/100x_platform

# ===========================
# RATE LIMITING
# ===========================

# Tier-based rate limits
RATE_LIMIT_FREE=100/hour
RATE_LIMIT_PRO=1000/hour
RATE_LIMIT_ENTERPRISE=10000/hour
RATE_LIMIT_ADMIN=100000/hour

# ===========================
# LOGGING SETTINGS
# ===========================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
LOG_FILE=api_gateway.log

# ===========================
# CORS SETTINGS
# ===========================

# Allowed origins (comma-separated for multiple origins)
# Development example: http://localhost:3000,http://localhost:8080
# Production example: https://100xplatform.com,https://app.100xplatform.com
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

