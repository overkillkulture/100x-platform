# ===========================
# ANALYTICS & MONITORING
# ===========================

# Plausible Analytics
PLAUSIBLE_DOMAIN=100xplatform.com

# Sentry Error Tracking
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1

# ===========================
# FEATURE FLAGS
# ===========================

# Enable/disable features
ENABLE_API_KEY_AUTH=True
ENABLE_JWT_AUTH=True
ENABLE_RATE_LIMITING=True
ENABLE_ANALYTICS=True
ENABLE_REQUEST_LOGGING=True

# ===========================
# PERFORMANCE SETTINGS
# ===========================

# Request timeout (seconds)
REQUEST_TIMEOUT=30

# Max request size (bytes) - 10MB default
MAX_REQUEST_SIZE=10485760

# Number of worker processes (for production)
WORKERS=4
WORKER_CLASS=uvicorn.workers.UvicornWorker

# ===========================
# CACHE SETTINGS
# ===========================

# Cache time-to-live (seconds)
CACHE_TTL=300
CACHE_MODULE_LIST_TTL=3600
CACHE_USER_DATA_TTL=1800

# ===========================
# AWS SERVICES (if using)
# ===========================

AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=100x-platform-bucket

# ===========================
# GOOGLE CLOUD (if using)
# ===========================

GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_CLOUD_STORAGE_BUCKET=100x-platform-bucket

# ===========================
# DATABASE BACKUP
# ===========================

BACKUP_ENABLED=True
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE=s3

# ===========================
# DEVELOPMENT TOOLS
# ===========================

# Enable debug toolbar
DEBUG_TOOLBAR=False

# Enable profiling
ENABLE_PROFILING=False

# Enable query logging
LOG_DATABASE_QUERIES=False

# ===========================
# PRODUCTION SETTINGS
# ===========================

# SSL/TLS
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/key.pem

# Domain configuration
DOMAIN=100xplatform.com
API_DOMAIN=api.100xplatform.com

# CDN
CDN_URL=https://cdn.100xplatform.com

# ===========================
# SOCIAL MEDIA INTEGRATIONS
# ===========================

# Twitter/X API
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_SECRET=your_twitter_access_secret

# Facebook API
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# LinkedIn API
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret

# Instagram API
INSTAGRAM_CLIENT_ID=your_instagram_client_id
INSTAGRAM_CLIENT_SECRET=your_instagram_client_secret

# ===========================
# WEBHOOK ENDPOINTS
# ===========================

# Webhook URLs for integrations
STRIPE_WEBHOOK_URL=https://api.100xplatform.com/webhooks/stripe
SENDGRID_WEBHOOK_URL=https://api.100xplatform.com/webhooks/sendgrid
TWILIO_WEBHOOK_URL=https://api.100xplatform.com/webhooks/twilio

# ===========================
# DEPLOYMENT SETTINGS
# ===========================

# Container registry
CONTAINER_REGISTRY=ghcr.io/100xplatform
IMAGE_TAG=latest

# Kubernetes namespace
K8S_NAMESPACE=100x-platform

# Health check settings
HEALTH_CHECK_INTERVAL=60
SERVICE_TIMEOUT=5

# ===========================
# TESTING
# ===========================

# Test database
TEST_DATABASE_URL=postgresql://user:password@localhost:5432/100x_platform_test

# Test Redis
TEST_REDIS_HOST=localhost
TEST_REDIS_PORT=6380

